.carousel#dashboard-carousel.slide.socks-carousel{ data: { ride: 'slide' }}
  .carousel-inner
    - (1..3).each do |i|
      .carousel-item{ class: "#{i == 1 ? 'active' : ''}" }
        .d-block.sock-slide{ class: "sock-slide-#{i}" }
  %a.carousel-control-prev{ href: '#dashboard-carousel', role: 'button', data: { slide: 'prev' }}
    %span.carousel-control-prev-icon{ 'aria-hidden' => 'true'}
    %span.sr-only Previous
  %a.carousel-control-next{ href: '#dashboard-carousel', role: 'button', data: { slide: 'next' }}
    %span.carousel-control-next-icon{ 'aria-hidden' => 'true'}
    %span.sr-only Next
